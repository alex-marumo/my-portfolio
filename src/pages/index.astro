---
import BaseLayout from '../layouts/BaseLayout.astro';
import { HeroSection } from '../components/HeroSection';
import { BentoGrid } from '../components/blocks/BentoGrid';
import { ProjectsGallery } from '../components/blocks/ProjectsGallery';
import { ContactsSection } from '../components/blocks/ContactsSection';
---

<BaseLayout title="Portfolio | Alex Marumo">
  <main>
    <HeroSection client:load />
    
    <div class="max-w-7xl mx-auto px-4">
       <BentoGrid client:visible />
       <ProjectsGallery client:visible />
       <ContactsSection client:visible />
    </div>
  </main>
  <footer class="py-12 border-t border-white/5 text-center">
    <p class="font-mono text-[10px] text-slate-600 tracking-[0.5em] uppercase">
      &copy; {new Date().getFullYear()} Alex Marumo // Built with Astro + React
    </p>
  </footer>
</BaseLayout>


